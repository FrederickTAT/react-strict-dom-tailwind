{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "isolatedModules": true,
    "lib": [
      "ES2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": false,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "node",
      "jest"
    ],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__"
  ]
}